@page
@model PR.Pages.MenuItems.IndexModel

@{
    ViewData["Title"] = "List of MenuItems";
}

<h1>MenuItems</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get">
    <div class="row">
        <div class="col-md-4">
            <label for="ItemName">ItemName:</label>
            <input class="form-control" type="text" id="ItemName" name="ItemName" value="@Model.ItemName" />
        </div>
        <div class="col-md-4">
            <label for="MinUnitPrice">Min Unit Price:</label>
            <input class="form-control" type="number" min="0" id="MinUnitPrice" name="MinUnitPrice" value="@Model.MinUnitPrice" />
        </div>
        <div class="col-md-4">
            <label for="MaxUnitPrice">Max Unit Price:</label>
            <input class="form-control" type="number" min="0" id="MaxUnitPrice" name="MaxUnitPrice" value="@Model.MaxUnitPrice" />
        </div>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].Users)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MenuItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>

                    <img src="~/img/MenuItem/@Html.DisplayFor(modelItem => item.Img)" style="object-fit: cover;" class="img-thumbnail avatar-100 rounded" />
@*                 @Html.DisplayFor(modelItem => item.Img) *@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Users.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
